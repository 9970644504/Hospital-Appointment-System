@model IEnumerable<HospitalAppointmentSystem.Models.Appointment>
@{
    ViewData["Title"] = "Reports";
}
<h2>Appointments Report</h2>
<table class="table">
    <thead><tr><th>Date</th><th>Patient</th><th>Doctor</th><th>Status</th></tr></thead>
    <tbody>
    @foreach(var a in Model){
        <tr>
            <td>@a.AppointmentDate</td><td>@a.Patient?.Name</td><td>@a.Doctor?.Name</td><td>@a.Status</td>
        </tr>
    }
    </tbody>
</table>
